{% extends 'base.admin.html.twig' %}

{% block title %}Yeni Soru Oluştur{% endblock %}
{% block pageTitle %}Yeni Soru Oluştur{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-body">
            <p class="alert alert-warning">Burada soru seçimi yaparken <strong>Metin sorusu</strong> <strong class="text-primary">veya</strong> <strong>Çoktan Seçmeli Soru</strong> alanlarından <u>yalnızca bir tanesini</u> seçmelisiniz.</p>
            <form method="post">
                <div class="row">
                    <div class="col-12 mb-15">
                        <label>{{ form_label(form.textQuestion) }}</label>
                        {{ form_widget(form.textQuestion, {'attr': {'class': 'form-control select2' }}) }}
                    </div>

                    <div class="col-12 mb-15">
                        <label>{{ form_label(form.choiceQuestion) }}</label>
                        {{ form_widget(form.choiceQuestion, {'attr': {'class': 'form-control select2' }}) }}
                    </div>

                    <div class="col-12 mb-15">
                        <label>{{ form_label(form.status) }}</label>
                        {% for key, item in form.status.children %}

                            <div class="adomx-radio-2 mb-10">
                                <input
                                        id="{{item.vars.id}}"
                                        name="{{item.vars.full_name}}"
                                        value="{{item.vars.value}}"
                                        type="radio"
                                {{ item.vars.checked ? 'checked' : '' }}
                                / >
                                <i class="icon"></i>
                                <label for="{{item.vars.id}}">{{item.vars.label}}</label>
                            </div>

                        {% endfor %}
                    </div>

                    <div class="col-12 mb-15">
                        <label>{{ form_label(form.random) }}</label>
                        {% for key, item in form.random.children %}
                            <div class="adomx-radio-2 mb-10">
                                <input
                                        id="{{item.vars.id}}"
                                        name="{{item.vars.full_name}}"
                                        value="{{item.vars.value}}"
                                        type="radio"
                                {{ item.vars.checked ? 'checked' : '' }}
                                / >
                                <i class="icon"></i>
                                <label for="{{item.vars.id}}">{{item.vars.label}}</label>
                            </div>
                        {% endfor %}
                        <p><small>{{ form_help(form.random) }}</small></p>
                    </div>

                    <div class="col-12 mb-15">
                        <label>{{ form_label(form.sort) }}</label>
                        {{ form_widget(form.sort, {'attr': {'class': 'form-control', 'placeholder': 'Sorunun kaçıncı sırada görüneceğini yazın' }}) }}
                    </div>

                    <div class="col-12">
                        {{ form_widget(form._token) }}
                        {{ form_widget(form.save, {'attr': {'class': 'button button-info'}}) }}
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="/static/admin/assets/js/plugins/select2/select2.full.min.js"></script>
    <script src="/static/admin/assets/js/plugins/select2/select2.active.js"></script>
{% endblock %}