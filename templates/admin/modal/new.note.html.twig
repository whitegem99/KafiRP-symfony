<div class="modal fade" id="newNote" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form action="{{ path('application_add_note') }}" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Başvuruya Note Ekle</h5>
                    <button class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                        <div class="form-group">
                            <label for="note">Notunuz</label>
                            <textarea class="form-control" name="note" id="note" placeholder="Notunuzu buraya yazınız..."></textarea>
                        </div>

                </div>
                <div class="modal-footer">
                    <input type="hidden" name="applicationId" />
                    <button type="submit" class="button button-primary">Notu Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>